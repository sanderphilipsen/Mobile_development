<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Goedgedaan"
    tools:showIn="@layout/activity_goedgedaan">
    <ImageView
        android:id="@+id/goedgedaaan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/minimedaille1"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:id="@+id/goedgedaanlabel"/>
    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/nieuweGebruiker"
        android:text="Terug naar menu"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/submit"
        android:onClick="klaar"
        />
</LinearLayout>