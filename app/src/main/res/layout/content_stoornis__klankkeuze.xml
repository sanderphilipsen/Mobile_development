<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/spongebobbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Stoornis_Klankkeuze"
    tools:showIn="@layout/activity_stoornis__klankkeuze">
 <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:fontFamily="@font/robotoregular"
   >
    <TextView
        android:textColor="#000"
        android:text="Kies de klank"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:includeFontPadding="false"/>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/klankrow"
                android:weightSum="2">
                <RadioGroup
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal|center"
                    android:id="@+id/klankgroep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_above="@+id/klankrow"
                    >
            <RadioButton
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:height="150dp"
                android:id="@+id/klank1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Finaal"
                android:textSize="17dp"
                android:button="@null"
                />
            <RadioButton
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:height="150dp"
                android:id="@+id/klank2"
                android:text="Initiaal"
                android:textSize="17dp"
                android:button="@null"
               />
                </RadioGroup>
            </TableRow>
            <TextView
                android:text="Kies de stoornis"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:gravity="center"
                android:includeFontPadding="false"
                />
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:weightSum="2"
                    android:id="@+id/stoornisrow"
                   >
                    <RadioGroup
                        android:layout_weight="2"
                        android:layout_gravity="center_horizontal|center"
                        android:id="@+id/stoornisgroep"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_above="@+id/stoornisrow"
                        >
                <RadioButton
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:height="150dp"
                    android:id="@+id/stoor2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Fronting"
                    android:textSize="17dp"
                    android:button="@null" />
                <RadioButton
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:height="150dp"
                    android:id="@+id/stoor1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Stopping"
                    android:textSize="17dp"
                    android:button="@null" />
                    </RadioGroup>
                </TableRow>

         <Button
             android:layout_marginLeft="50dp"
             android:layout_marginRight="50dp"
             android:layout_marginTop="40dp"
             android:gravity="center"
             android:textAlignment="center"
             android:id="@+id/geefkeuzedoor"
             android:text="Ga verder"
             android:textColor="#000"
             android:textSize="18sp"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:background="@drawable/submit"
             android:onClick="geefKeuzedoor_onClick"
             />


 </TableLayout>
</android.support.constraint.ConstraintLayout>