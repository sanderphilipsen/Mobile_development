<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LuisterGoed"
    tools:showIn="@layout/activity_luister_goed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:text="@string/Luister_goed_instructie"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/Beluister"
            style="?android:attr/buttonStyleSmall"
            android:background="@color/colorAccent"
            android:textColor="#000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Start"
            android:onClick="speel_onClick"/>
        <Button
            android:id="@+id/Pauze"
            style="?android:attr/buttonStyleSmall"
            android:background="@color/colorAccent"
            android:textColor="#000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Pauze"
            android:onClick="Pause_onClick"/>
        <Button
            android:id="@+id/Stop"
            style="?android:attr/buttonStyleSmall"
            android:background="@color/colorAccent"
            android:textColor="#000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Stop"
            android:onClick="Stop_onClick"/>
    <ImageView
        android:id="@+id/oor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/oor"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>