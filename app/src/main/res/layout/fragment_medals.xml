<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spongebobbackground"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Luister goed"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25dp" />

    <TableRow
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        >

        <ImageView
            android:id="@+id/supermedailleluistergoed"
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/minimedailleluistergoed"
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
           /> </TableRow>
        <TableRow
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/supermedailleluistergoedlabel"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                />

            <TextView
                android:textAlignment="center"
                android:id="@+id/minimedailleluistergoedlabel"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                /> </TableRow>
    <TextView
        android:textColor="#000"
        android:text="Zeg het zelf eens"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center"
        android:includeFontPadding="false"/>
    <TableRow
        android:layout_weight="2">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/supermedaillezeg"
            android:layout_width="fill_parent"
            android:layout_height="250dp"/>
        <ImageView
            android:layout_weight="1"
            android:layout_height="250dp"
            android:id="@+id/minimedaillezeg"
            android:layout_width="fill_parent"
            /> </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/supermedaillezeglabel"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textAlignment="center"
                />

            <TextView
                android:textAlignment="center"
                android:layout_height="70dp"
                android:id="@+id/minimedaillezeglabel"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                /> </TableRow>
    </TableLayout>
</LinearLayout>