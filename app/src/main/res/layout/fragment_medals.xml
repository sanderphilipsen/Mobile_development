<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark">
<TextView
android:text="Mijn medaillemuur"
android:layout_marginTop="40dp"
android:layout_height="wrap_content"
android:textAlignment="center"
android:textSize="20dp"
android:textColor="#000"
android:gravity="center"
android:includeFontPadding="false"
    />
    <TableRow
        android:weightSum="2"
        >
    <ImageView
        android:layout_weight="1"
        android:onClick="Speel_onClick"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:id="@+id/supermedailleluistergoed"
        android:layout_width="150dp"
        android:layout_height="170dp">
        <TextView
            android:id="@+id/supermedailleluistergoedlabel"/>
    </ImageView>
        <ImageView
            android:layout_weight="1"
            android:onClick="Speel_onClick"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:id="@+id/minimedailleluistergoed"
            android:layout_width="fill_parent"
            android:layout_height="170dp">
        <TextView
            android:id="@+id/minimedailleluistergoedlabel"/>
        </ImageView>
    </TableRow>
</TableLayout>